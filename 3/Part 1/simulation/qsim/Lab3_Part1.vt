`timescale 1 ps/ 1 ps
module Lab3_Part1_vlg_sample_tst(
	KEY,
	SW,
	sampler_tx
);
input [1:0] KEY;
input [17:0] SW;
output sampler_tx;

reg sample;
time current_time;
always @(KEY or SW)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module Lab3_Part1_vlg_check_tst (
	LEDG,
	LEDR,
	sampler_rx
);
input [7:0] LEDG;
input [17:0] LEDR;
input sampler_rx;

reg [7:0] LEDG_expected;
reg [17:0] LEDR_expected;

reg [7:0] LEDG_prev;
reg [17:0] LEDR_prev;

reg [7:0] LEDG_expected_prev;

reg [7:0] last_LEDG_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	LEDG_prev = LEDG;
	LEDR_prev = LEDR;
end

// update expected /o prevs

always @(trigger)
begin
	LEDG_expected_prev = LEDG_expected;
end



// expected LEDG[0]
initial
begin
	LEDG_expected[0] = 1'bX;
end 

// expected LEDG[1]
initial
begin
	LEDG_expected[1] = 1'bX;
end 
